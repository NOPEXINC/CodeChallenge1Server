<% layout('dashboard') %>
<div class="container well">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading"><b>ADD EVENTS</b></div>
      <form id="Events-form" method="post" class="form-horizontal" action="/insert">
        <label class="col-md-2 control-label" for="Event Title">Title</label>
        <div class="col-md-4 ">
          <input type="text" required class="form-control" id="Event Title" name="title"/>
        </div>
        <label class="col-md-2 control-label" for="Event venue">Venue</label>
        <div class="col-md-4 ">
          <input type="text" required class="form-control" id="Event venue" name="venue"/>
        </div>
        <label class="col-md-2 control-label" for="Event Description">Description</label>
        <div class="col-md-4 ">
          <input type="text" required class="form-control" id="Event Description" name="desc"/>
        </div>
        <label class="col-md-2 control-label" for="Event date">Date</label>
        <div class="col-md-4 ">
          <input type="text" required class="form-control" id="Event Date" name="date"/>
        </div>
        <label class="col-md-2 control-label" for="Event time">Time</label>
        <div class="col-md-4 ">
          <input type="text" required class="form-control" id="Event Time" name="time"/>
        </div>
      </div>
    </div>
    <div class="col-md-6 col-md-offset-2">
      <button type="Create"class="btn btn-success"><li><i class="fa-li fa fa-spinner fa-spin"></i>CREATE</button>
      </div>
    </div>
  </form>
  <div class="container well">
    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading"><b>UPDATE EVENT</b></div>
        <form id="Events-form" method="post" class="form-horizontal" action="/update">
          <label class="col-md-2 control-label" for="Event id">Id</label>
          <div class="col-md-4 ">
            <input type="text" required class="form-control" id="Event id" name="id"/>
          </div>
          <label class="col-md-2 control-label" for="Event Title">Title</label>
          <div class="col-md-4 ">
            <input type="text" required class="form-control" id="Event Title" name="title"/>
          </div>
          <label class="col-md-2 control-label" for="Event venue">Venue</label>
          <div class="col-md-4 ">
            <input type="text" required class="form-control" id="Event venue" name="venue"/>
          </div>
          <label class="col-md-2 control-label" for="Event Description">Description</label>
          <div class="col-md-4 ">
            <input type="text" required class="form-control" id="Event Description" name="desc"/>
          </div>
          <label class="col-md-2 control-label" for="Event date">Date</label>
          <div class="col-md-4 ">
            <input type="text" required class="form-control" id="Event Date" name="date"/>
          </div>
          <label class="col-md-2 control-label" for="Event time">Time</label>
          <div class="col-md-4 ">
            <input type="text" required class="form-control" id="Event Time" name="time"/>
          </div>
        </div>
      </div>
      <div class="col-md-6 col-md-offset-2">
        <button type="Create"class="btn btn-primary btn-warning"><i class="fa fa-info-circle"></i>UPDATE</button>
      </div>
    </div>
    <div class="container well">
      <div class="row">
        <div class="panel panel-default">
          <div class="panel-heading"><b>DELETE EVENT</b></div>
          <form id="Events-form" method="post" class="form-horizontal" action="/delete">
            <label class="col-md-2 control-label" for="Event id">Id</label>
            <div class="col-md-4 ">
              <input type="text" required class="form-control" id="Event id" name="id"/>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-md-offset-2">
          <button type="Create"class="btn btn-primary btn-danger"><i class="fa fa-trash"></i>DELETE</button>
        </div>
      </div>
     </div>
   </div>
 </div>
